---
import Layout from '../layouts/Layout.astro'; 
import Header from '../components/base/Header';
import Welcome from '../components/base/Welcome.astro';
import AboutMe from '../components/base/AboutMe.astro';
import Experience from '../components/base/Experience.astro';
import Projects from '../components/base/Projects.astro';
import Skills from '../components/base/Skills.astro';
import Footer from '../components/base/Footer.astro';
---

<Layout title="My Portfolio">
	<Header client:only/>
	<Welcome />
	<AboutMe />
	<Experience />
	<Projects />
	<Skills />
	<Footer />
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem; 
		font-size: 20px;
		line-height: 1.6;
	} 
</style>
